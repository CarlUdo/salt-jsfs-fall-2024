{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
